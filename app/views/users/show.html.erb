<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
            <tr>
    	        <th>name</th>
    	        <th><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th><%= @user.introduction %></th>
            </tr>
          </table>
          <div class='row'>
            <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>
          <%= render 'books/newbook', book: @book %>
      </div>

      <div class='col-xs-9'>
        <h2>Books</h2>
          <table class='table'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path do %>
                      <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>