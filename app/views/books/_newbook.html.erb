<h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="row">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>
    <div class="row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class: "col-xs-12" %>
    </div>
    <br>
    <div class="row">
      <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
    </div>
  <% end %>