<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
        <table class='table'>
          <%= attachment_image_tag current_user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= current_user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>
        <%= render 'books/newbook', book: @book_new %>
      </div>
      <div class='col-xs-9'>
        <h2>Book detail</h2>
        <table class='table'>
          <tbody>
  	        <tr>
  	          <td>
                <%= link_to user_path(@book.user.id) do %>
  	              <%= attachment_image_tag @book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <p><%= @book.title %></p>
              </td>
              <td>
                <p><%= @book.body %></p>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>