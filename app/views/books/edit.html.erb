<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
        <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
      <div class="row">
        <h4>Title</h4>
	    <%= f.text_field :title, class: "col-xs-12" %>
	  </div>
      <div class="row">
		<h4>Opinion</h4>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>
      <br>
      <div class="row">
        <%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary" %>
        <% end %>
      </div>
      <div class="row">
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>